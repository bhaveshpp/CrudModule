<?xml version = "1.0"?>
<config xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation = "urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Bhaveshpp_Blogpost::blogpost_menu_title" title="Blogpost Menu" sortOrder="100">
                        <resource id="Bhaveshpp_Blogpost::blogpost_menu_all_post" title="All Blogpost" sortOrder="100"/>
                        <resource id="Bhaveshpp_Blogpost::blogpost_settings" title="Settings" sortOrder="100"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Bhaveshpp_Blogpost::setting_configuration" title="Blogpost Setting"/>
                        </resource>
                    </resource> 
                </resource>
            </resource>
        </resources>
    </acl>
</config>